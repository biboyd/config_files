# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        markup = "pango"
}

order += "cpu_usage"
order += "memory"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "volume master"
order += "battery all"
#order += "load"
order += "tztime local"

cpu_usage {

		format = "%usage"
		max_threshold = 75
		format_above_threshold = "%usage"
		degraded_threshold = 50
		format_above_degraded_threshold = "%usage"
}
wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining" 
        integer_battery_capacity = true
        last_full_capacity = true
        low_threshold = 15
        threshold_type = time
        status_chr =" ⚡"
        status_full = "<span color='#00FF00'> FULL </span>"
        status_bat="BAT"
        align = "center"
        min_width = 110
}

disk "/" {
        format = "%avail"
        align = "center"
        min_width = 80
}

load {
        format = "%1min"
}

memory {
        format = "%available"
        threshold_degraded = "1G"
        format_degraded = "<span color='c00000'> %available </span>"
}

tztime local{
        format = "<span color='#00ffff'> %Y-%m-%d %H:%M:%S </span>"
        #format_time = "%Y-%m-%d %H:%M:%S"

}

volume master {
        #format = "<span color='#28557'>7:</span> %volume "
        align = "center"
        format = "<span color='#00ffff'> Vol:%volume </span>"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        min_width = 120
}
